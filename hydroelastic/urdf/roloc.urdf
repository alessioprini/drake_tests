<?xml version="1.0" ?>
<robot name="grinding_machine">
  <!-- Base link -->
  <link name="base"/>
  <link name="spindle"/>

  <!-- Prismatic joint -->
  <joint name="prismatic_joint" type="prismatic">
    <parent link="base"/>
    <child link="spindle"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1" effort="10" velocity="1"/>
  </joint>

  <joint name="fixed_joint" type="fixed">
    <parent link="spindle"/>
    <child link="object"/>
    <origin xyz="0 0 0.0" rpy="0.0872665 0 0"/> 5 degrees in radians
  </joint>


  <!-- Object attached to the robot, described by an .stl file -->
  <link name="object">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://hydroelastic/mesh/roloc.obj" scale="1 1 1"/>
        <!-- <cylinder length="0.02" radius="0.0375"/> -->
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://hydroelastic/mesh/roloc.obj" scale="1 1 1"/>
        <!-- <cylinder length="0.02" radius="0.0375"/> -->
      </geometry>
    </collision>
  </link>
</robot>